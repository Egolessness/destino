<configuration debug="false" scan="false" packagingData="true">
    <contextName>destino</contextName>

    <appender name="DEFAULT_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logPath}/destino/all.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${DS.LOG.PATH}/destino/all.log.%i</fileNamePattern>
            <maxIndex>${DS.LOG.MAX.COUNT:-7}</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${logFileSize}</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
        </encoder>
    </appender>
    
    <appender name="REGISTRATION_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${DS.LOG.PATH}/destino/registration.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${DS.LOG.PATH}/destino/registration.log.%i</fileNamePattern>
            <maxIndex>${DS.LOG.MAX.COUNT:-7}</maxIndex>
        </rollingPolicy>
        
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${DS.LOG.FILE.SIZE:-10MB}</maxFileSize>
        </triggeringPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
        </encoder>
    </appender>
    
    <appender name="REMOTE_LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${DS.LOG.PATH}/destino/remote.log</file>
        
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>${DS.LOG.PATH}/destino/remote.log.%i</fileNamePattern>
            <maxIndex>${DS.LOG.MAX.COUNT:-7}</maxIndex>
        </rollingPolicy>
        
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>${DS.LOG.FILE.SIZE:-10MB}</maxFileSize>
        </triggeringPolicy>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</pattern>
        </encoder>
    </appender>
    
    
    <logger name="org.egolessness.destino" level="${org.egolessness.destino.log.level:-info}" additivity="false">
        <appender-ref ref="DEFAULT_LOG_FILE"/>
    </logger>

    <Logger name="org.egolessness.destino.common.remote" level="${org.egolessness.destino.remote.log.level:-info}"
        additivity="false">
        <appender-ref ref="REMOTE_LOG_FILE"/>
    </Logger>
    
    <logger name="org.egolessness.destino.client.registration" level="${org.egolessness.destino.registration.log.level:-info}"
            additivity="false">
        <appender-ref ref="REGISTRATION_LOG_FILE"/>
    </logger>

</configuration>
