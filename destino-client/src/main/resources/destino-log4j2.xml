<Configuration status="WARN">
    <Appenders>
        <RollingFile name="DEFAULT_LOG_FILE" fileName="${sys:DS.LOG.PATH}/destino/all.log"
            filePattern="${sys:DS.LOG.PATH}/destino/all.log.%d{yyyy-MM-dd}.%i">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</Pattern>
            </PatternLayout>
            
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${sys:DS.LOG.FILE.SIZE:-10MB}"/>
            </Policies>
            
            <DefaultRolloverStrategy max="${sys:DS.LOG.MAX.COUNT:-7}"/>
        </RollingFile>
    
        <RollingFile name="REMOTE_LOG_FILE" fileName="${sys:DS.LOG.PATH}/destino/remote.log"
            filePattern="${sys:DS.LOG.PATH}/destino/remote.log.%d{yyyy-MM-dd}.%i">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</Pattern>
            </PatternLayout>
    
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${sys:DS.LOG.FILE.SIZE:-10MB}"/>
            </Policies>
    
            <DefaultRolloverStrategy max="${sys:DS.LOG.MAX.COUNT:-7}"/>
        </RollingFile>
        
        <RollingFile name="REGISTRATION_LOG_FILE" fileName="${sys:DS.LOG.PATH}/destino/registration.log"
            filePattern="${sys:DS.LOG.PATH}/destino/registration.log.%d{yyyy-MM-dd}.%i">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p [%-5t:%c{2}] %m%n</Pattern>
            </PatternLayout>
            
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="${sys:DS.LOG.FILE.SIZE:-10MB}"/>
            </Policies>
            
            <DefaultRolloverStrategy max="${sys:DS.LOG.MAX.COUNT:-7}"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <Logger name="com.egolessness.destino" level="${sys:com.egolessness.destino.log.level:-info}" additivity="false">
            <AppenderRef ref="DEFAULT_LOG_FILE"/>
        </Logger>
    
        <Logger name="com.egolessness.destino.common.remote" level="${sys:com.egolessness.destino.remote.log.level:-info}"
            additivity="false">
            <AppenderRef ref="REMOTE_LOG_FILE"/>
        </Logger>
        
        <Logger name="com.egolessness.destino.client.registration" level="${sys:com.egolessness.destino.registration.log.level:-info}"
                additivity="false">
            <AppenderRef ref="REGISTRATION_LOG_FILE"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="CONFIG_LOG_FILE"/>
        </Root>
    </Loggers>
</Configuration>
